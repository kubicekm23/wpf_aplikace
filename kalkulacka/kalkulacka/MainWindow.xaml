<Window x:Class="kalkulacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kalkulacka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="TextVypoctu" Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0" FontSize="25px"></TextBlock>
        
        <Button Grid.Row="1" Grid.Column="0" Content="%" FontSize="25px"></Button>
        <Button Grid.Row="1" Grid.Column="1" Content="CE" FontSize="25px" Click="ClearEverything"></Button>
        <Button Grid.Row="1" Grid.Column="2" Content="C" FontSize="25px" Click="ClearNumber"></Button>
        <Button Grid.Row="1" Grid.Column="3" Content="Umazat" FontSize="25px" Click="RemoveLast"></Button>

        <Button Grid.Row="2" Grid.Column="0" Content="1/X" FontSize="25px" Click="ZmacknutoMinusPrvni"></Button>
        <Button Grid.Row="2" Grid.Column="1" Content="X^2" FontSize="25px" Click="ZmacknutoNaDruhou"></Button>
        <Button Grid.Row="2" Grid.Column="2" Content="2√X" FontSize="25px" Click="ZmacknutoDruhaOdmocnina"></Button>
        <Button Grid.Row="2" Grid.Column="3" Content="/" FontSize="25px" Click="ZmacknutoLomitko"></Button>
        
        <Button Grid.Row="3" Grid.Column="0" Content="7" FontSize="25px" Click="ZmacknutoSedm"></Button>
        <Button Grid.Row="3" Grid.Column="1" Content="8" FontSize="25px" Click="ZmacknutoOsm"></Button>
        <Button Grid.Row="3" Grid.Column="2" Content="9" FontSize="25px" Click="ZmacknutoDevet"></Button>
        <Button Grid.Row="3" Grid.Column="3" Content="*" FontSize="25px" Click="ZmacknutoKrat"></Button>
        
        <Button Grid.Row="4" Grid.Column="0" Content="4" FontSize="25px" Click="ZmacknutoCtyry"></Button>
        <Button Grid.Row="4" Grid.Column="1" Content="5" FontSize="25px" Click="ZmacknutoPet"></Button>
        <Button Grid.Row="4" Grid.Column="2" Content="6" FontSize="25px" Click="ZmacknutoSest"></Button>
        <Button Grid.Row="4" Grid.Column="3" Content="-" FontSize="25px" Click="ZmacknutoMinus"></Button>
        
        <Button Grid.Row="5" Grid.Column="0" Content="1" FontSize="25px" Click="ZmacknutoJedna"></Button>
        <Button Grid.Row="5" Grid.Column="1" Content="2" FontSize="25px" Click="ZmacknutoDva"></Button>
        <Button Grid.Row="5" Grid.Column="2" Content="3" FontSize="25px" Click="ZmacknutoTri"></Button>
        <Button Grid.Row="5" Grid.Column="3" Content="+" FontSize="25px" Click="ZmacknutoPlus"></Button>
        
        <Button Grid.Row="6" Grid.Column="0" Content="+/-" FontSize="25px" Click="ZmacknutoReversePlusMinus"></Button>
        <Button Grid.Row="6" Grid.Column="1" Content="0" FontSize="25px" Click="ZmacknutoNula"></Button>
        <Button Grid.Row="6" Grid.Column="2" Content="," FontSize="25px" Click="ZmacknutaDesetinnaCarka"></Button>
        <Button Grid.Row="6" Grid.Column="3" Content="=" FontSize="25px" Click="Calculate"></Button>
    </Grid>
</Window>
