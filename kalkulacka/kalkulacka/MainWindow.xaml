<Window x:Class="kalkulacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kalkulacka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="TextVypoctu" Grid.Row="0" Grid.ColumnSpan="4" Grid.Column="0"></TextBlock>
        
        <Button Grid.Row="1" Grid.Column="0" Content="%"></Button>
        <Button Grid.Row="1" Grid.Column="1" Content="CE"></Button>
        <Button Grid.Row="1" Grid.Column="2" Content="C"></Button>
        <Button Grid.Row="1" Grid.Column="3" Content="Umazat"></Button>

        <Button Grid.Row="2" Grid.Column="0" Content="1/X" Click="ZmacknutoMinusPrvni"></Button>
        <Button Grid.Row="2" Grid.Column="1" Content="X^2" Click="ZmacknutoNaDruhou"></Button>
        <Button Grid.Row="2" Grid.Column="2" Content="2√X"></Button>
        <Button Grid.Row="2" Grid.Column="3" Content="/" Click="ZmacknutoLomitko"></Button>
        
        <Button Grid.Row="3" Grid.Column="0" Content="7" Click="ZmacknutoSedm"></Button>
        <Button Grid.Row="3" Grid.Column="1" Content="8" Click="ZmacknutoOsm"></Button>
        <Button Grid.Row="3" Grid.Column="2" Content="9" Click="ZmacknutoDevet"></Button>
        <Button Grid.Row="3" Grid.Column="3" Content="*" Click="ZmacknutoKrat"></Button>
        
        <Button Grid.Row="4" Grid.Column="0" Content="4" Click="ZmacknutoCtyry"></Button>
        <Button Grid.Row="4" Grid.Column="1" Content="5" Click="ZmacknutoPet"></Button>
        <Button Grid.Row="4" Grid.Column="2" Content="6" Click="ZmacknutoSest"></Button>
        <Button Grid.Row="4" Grid.Column="3" Content="-" Click="ZmacknutoMinus"></Button>
        
        <Button Grid.Row="5" Grid.Column="0" Content="1" Click="ZmacknutoJedna"></Button>
        <Button Grid.Row="5" Grid.Column="1" Content="2" Click="ZmacknutoDva"></Button>
        <Button Grid.Row="5" Grid.Column="2" Content="3" Click="ZmacknutoTri"></Button>
        <Button Grid.Row="5" Grid.Column="3" Content="+" Click="ZmacknutoPlus"></Button>
        
        <Button Grid.Row="6" Grid.Column="0" Content="+/-"></Button>
        <Button Grid.Row="6" Grid.Column="1" Content="0" Click="ZmacknutoNula"></Button>
        <Button Grid.Row="6" Grid.Column="2" Content="," Click="ZmacknutaDesetinnaCarka"></Button>
        <Button Grid.Row="6" Grid.Column="3" Content="=" Click="Calculate"></Button>
    </Grid>
</Window>
